---
interface Props {
  activeMenu?: string
}

const { activeMenu } = Astro.props
---

<div id="header-info" class="wrapper">
  <div class="container fullwidth">
    <ul>
      <li><span class="header-icon-pin"></span>88000 Ужгород, Україна</li>
      <li>
        <span class="header-icon-mail"></span><a
          href="mailto:aikidoaikikai.academy@gmail.com"
          class="link-style2">aikidoaikikai.academy@gmail.com</a
        >
      </li>
      <li><span class="header-icon-phone"></span>+38 (050) 931 46 01</li>
    </ul>
  </div>
</div>
<div id="header" class="wrapper">
  <div id="logo" class="container fullwidth" style="padding-top: 20px; padding-bottom: 20px;">
    <a href="http://aikidoacademy.com.ua/"></a>
  </div>
  <div id="primary-navigation-placholder" style="height: 45px; display: none;"></div><div
    id="primary-navigation"
    class="container fullwidth"
  >
    <a class="menu-responsive"
      ><span class="menu-icon-nav"></span><span class="menu-title">Navigation</span></a
    >
    <ul class="menu clearfix" style="display: block;">
      <li class:list={[{ selectedLava: activeMenu === 'home' }]}>
        <a class:list={[{ current: activeMenu === 'home' }]} href="/" style="padding-left: 20px;">
          <span class="menu-icon-home"></span>Головна
        </a>
      </li>
      <li class:list={[{ selectedLava: activeMenu === 'about' }]}>
        <a
          class:list={[{ current: activeMenu === 'about' }]}
          href="/about"
          style="padding-left: 20px;"
        >
          <span class="menu-icon-about"></span>Про нас
        </a>
      </li>
      <li>
        <a href="/video" style="padding-left: 20px;">
          <span class="menu-icon-features"></span>Відео
        </a>
      </li>
      <li>
        <a href="/blog" style="padding-left: 20px;">
          <span class="menu-icon-blog"></span>Новини
        </a>
      </li>
      <li>
        <a href="/rozklad-seminariv" style="padding-left: 20px;">
          <span class="menu-icon-"></span>Розклад семінарів
        </a>
      </li>
      <li class:list={[{ selectedLava: activeMenu === 'contacts' }]}>
        <a
          class:list={[{ current: activeMenu === 'contacts' }]}
          href="/contacts"
          style="padding-left: 20px;"
        >
          <span class="menu-icon-contact"></span>Контакти
        </a>
      </li>
    </ul>
  </div>
</div>
